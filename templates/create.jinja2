{% extends "base.jinja2" %}

{% block subtitle %}New Donors and Donations{% endblock subtitle %}

{% block content %}
<form method="POST">
	{% if error %}<p>{{error}}</p>{% endif %}
	<label for="donor-input">Donor Name:</label><input id="donor-input" type="text" name="donor"><br>
	
	<label for="donation-input">Donation Amount:</label><input id="donation-input" type="number" name="donation">
	<input type="submit" value="Add Your Donation!!">
</form>
{% endblock content %}